{
  "css.validate": false,
  "scss.validate": true,
  "less.validate": true,

  // Ignore unknown at-rules (Tailwind/PostCSS custom directives)
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",

  "files.associations": {
    "*.css": "css",
    "*.pcss": "postcss"
  }
}

